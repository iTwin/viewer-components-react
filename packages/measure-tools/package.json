    "@bentley/itwin-client": "^2.15.0",
    "@bentley/presentation-components": "^2.15.0",
    "@bentley/telemetry-client": "^2.15.0",
    "@bentley/ui-abstract": "^2.15.0",
    "@bentley/ui-components": "^2.15.0",
    "@bentley/ui-core": "^2.15.0",
    "@bentley/ui-framework": "^2.15.0",
    "@bentley/ui-ninezone": "^2.15.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
