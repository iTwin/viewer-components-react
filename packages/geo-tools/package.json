{
  "name": "@bentley/geo-tools-react",
  "version": "0.1.3",
  "description": "React Geospatial Tools",
  "keywords": [
    "Bentley",
    "iModel.js",
    "Geo",
    "Bing",
    "Map",
    "Search",
    "Address"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/imodeljs/viewer-components-react/tree/master/packages/geo-tools"
  },
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/geo-tools.js",
  "typings": "lib/geo-tools",
  "scripts": {
    "build": " tsc 1>&2 && npm run copy:assets && npm run pseudolocalize",
    "build-prod": " tsc -p tsconfig.json 1>&2 && npm run copy:assets",
    "clean": "rimraf lib",
    "copy:assets": "cpx \"./src/**/*.{*css,json,svg}\" \"./lib\" && cpx \"./public/**/*\" \"./lib/public\"",
    "cover": "nyc npm test",
    "lint": "eslint ./src/**/*.{ts,tsx} 1>&2",
    "pseudolocalize": "betools pseudolocalize --englishDir ./public/locales/en --out ./lib/public/locales/en-PSEUDO",
    "test": "mocha --opts ./mocha.opts \"./lib/test/**/*.test.js\""
  },
  "eslintConfig": {
    "extends": "./node_modules/@bentley/build-tools/.eslintrc.js"
  },
  "nyc": {
    "branches": 25,
    "check-coverage": true,
    "extends": "./node_modules/@bentley/build-tools/.nycrc",
    "functions": 60,
    "lines": 60,
    "require": [
      "ignore-styles",
      "jsdom-global/register",
      "source-map-support/register",
      "ts-node/register"
    ],
    "statements": 60
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "i18next": "^10.2.2",
    "react-autosuggest": "^10.0.2",
    "svg-sprite-loader": "4.2.1"
  },
  "devDependencies": {
    "@bentley/bentleyjs-core": "^2.9.1",
    "@bentley/build-tools": "^2.9.1",
    "@bentley/eslint-plugin": "^2.9.1",
    "@bentley/geometry-core": "^2.9.1",
    "@bentley/imodeljs-common": "^2.9.1",
    "@bentley/imodeljs-frontend": "^2.9.1",
    "@bentley/imodeljs-i18n": "^2.9.1",
    "@bentley/itwin-client": "^2.9.1",
    "@bentley/react-scripts": "3.4.6",
    "@bentley/telemetry-client": "^2.9.1",
    "@bentley/ui-abstract": "^2.9.1",
    "@bentley/ui-components": "^2.9.1",
    "@bentley/ui-core": "^2.9.1",
    "@bentley/ui-framework": "^2.9.1",
    "@testing-library/react": "^8.0.1",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/chai": "^4.1.4",
    "@types/classnames": "^2.2.3",
    "@types/enzyme": "3.9.3",
    "@types/i18next": "^8.4.2",
    "@types/mocha": "^5.2.5",
    "@types/node": "10.14.1",
    "@types/react": "16.9.43",
    "@types/react-autosuggest": "^10.0.0",
    "@types/react-dom": "^16.8.0",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7",
    "chai-jest-snapshot": "^2.0.0",
    "chai-spies": "1.0.0",
    "cpx": "^1.5.0",
    "enzyme": "^3.4.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^6.8.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^11.12.0",
    "jsdom-global": "3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^14.0.0",
    "raf": "^3.4.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.2.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^7.0.1",
    "ts-sinon": "^2.0.1",
    "typescript": "~3.7.4",
    "xmlhttprequest": "^1.8.0"
  },
  "peerDependencies": {
    "@bentley/bentleyjs-core": "^2.9.1",
    "@bentley/geometry-core": "^2.9.1",
    "@bentley/imodeljs-common": "^2.9.1",
    "@bentley/imodeljs-frontend": "^2.9.1",
    "@bentley/imodeljs-i18n": "^2.9.1",
    "@bentley/itwin-client": "^2.9.1",
    "@bentley/ui-abstract": "^2.9.1",
    "@bentley/ui-components": "^2.9.1",
    "@bentley/ui-core": "^2.9.1",
    "@bentley/ui-framework": "^2.9.1",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  }
}
