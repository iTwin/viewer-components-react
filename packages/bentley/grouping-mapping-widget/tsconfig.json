{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./lib",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "traceResolution": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": false,
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "files": ["custom.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["lib/**/*"],
}