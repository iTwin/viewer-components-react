{
  "name": "@itwin/map-layers",
  "version": "6.0.9",
  "description": "Extension that adds a Map Layers Widget",
  "main": "lib/cjs/map-layers.js",
  "module": "lib/esm/map-layers.js",
  "typings": "lib/cjs/map-layers",
  "exports": {
    ".": {
      "import": "./lib/esm/map-layers.js",
      "require": "./lib/cjs/map-layers.js",
      "types": "./lib/cjs/map-layers.d.ts"
    },
    "./mcp": {
      "import": "./lib/esm/mcp/index.js",
      "require": "./lib/cjs/mcp/index.js",
      "types": "./lib/cjs/mcp/index.d.ts"
    }
  },
  "bin": {
    "map-layers-mcp": "lib/cjs/mcp/cli.js"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run -s copy:locale && npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs && npm run -s copy:cjs",
    "build:esm": "tsc 1>&2 --module ES2020 --outDir lib/esm && npm run -s copy:esm",
    "clean": "rimraf lib",
    "copy:locale": "cpx \"./src/public/**/*\" ./lib/public",
    "copy:cjs": "cpx \"./src/**/*.{*css,json,svg}\" \"./lib/cjs\"",
    "copy:esm": "cpx \"./src/**/*.{*css,json,svg}\" \"./lib/esm\"",
    "cover": "vitest --run --coverage",
    "docs": "",
    "lint": "eslint -f visualstudio \"./src/**/*.{ts,tsx}\" 1>&2",
    "lintfix": "eslint --fix -f visualstudio \"./src/**/*.{ts,tsx}\" 1>&2",
    "pseudolocalize": "betools pseudolocalize --englishDir=./src/public/locales/en --out=./src/public/locales/en-PSEUDO",
    "test": "vitest --run",
    "rebuild": "npm run -s clean && npm run -s build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/viewer-components-react/tree/master/packages/itwin/map-layers"
  },
  "keywords": [
    "iModel",
    "BIM",
    "maps",
    "extension"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "dependencies": {
    "@itwin/itwinui-icons-color-react": "^2.1.0",
    "@itwin/itwinui-icons-react": "^2.10.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "react-beautiful-dnd": "^13.1.1",
    "zod": "~3.24.0"
  },
  "devDependencies": {
    "@itwin/appui-abstract": "^5.0.0",
    "@itwin/appui-react": "^5.5.0",
    "@itwin/build-tools": "^5.0.0",
    "@itwin/components-react": "^5.5.0",
    "@itwin/core-bentley": "^5.0.0",
    "@itwin/core-common": "^5.0.0",
    "@itwin/core-frontend": "^5.0.0",
    "@itwin/core-geometry": "^5.0.0",
    "@itwin/core-orbitgt": "^5.0.0",
    "@itwin/core-quantity": "^5.0.0",
    "@itwin/core-react": "^5.5.0",
    "@itwin/ecschema-metadata": "^5.0.0",
    "@itwin/ecschema-rpcinterface-common": "^5.0.0",
    "@itwin/eslint-plugin": "^5.2.1",
    "@itwin/imodel-components-react": "^5.5.0",
    "@itwin/itwinui-react": "^3.18.1",
    "@itwin/map-layers-formats": "^5.0.0",
    "@itwin/webgl-compatibility": "^5.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.9",
    "@types/react": "^18.3.20",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitest/coverage-v8": "^4.0.18",
    "cpx2": "^3.0.2",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unused-imports": "^4.1.4",
    "ignore-styles": "^5.0.1",
    "jsdom": "^28.0.0",
    "raf": "^3.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^7.2.9",
    "redux": "^4.2.1",
    "rimraf": "^3.0.2",
    "sass": "^1.97.3",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typemoq": "^2.1.0",
    "typescript": "~5.6.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@itwin/appui-abstract": "^5.0.0",
    "@itwin/appui-react": "^5.5.0",
    "@itwin/components-react": "^5.5.0",
    "@itwin/core-bentley": "^5.0.0",
    "@itwin/core-common": "^5.0.0",
    "@itwin/core-frontend": "^5.0.0",
    "@itwin/core-react": "^5.5.0",
    "@itwin/imodel-components-react": "^5.5.0",
    "@itwin/itwinui-react": "^3.16.5",
    "@itwin/map-layers-formats": "^5.0.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  }
}
