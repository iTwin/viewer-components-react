{
  "name": "@itwin/property-grid-react",
  "version": "0.1.0",
  "description": "This package offers a React widget which provides access to the property grid within an iModel. Designed for use in an iTwin AppUI application",
  "keywords": [
    "Bentley",
    "Property Grid React",
    "iModel Property Grid",
    "iTwin.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/itwin/viewer-components-react/tree/master/packages/itwin/property-grid"
  },
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/cjs/property-grid-react.js",
  "module": "lib/esm/property-grid-react.js",
  "typings": "lib/cjs/property-grid-react",
  "scripts": {
    "build": "npm run -s dual-build && npm run -s copy:assets",
    "dual-build": "npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs",
    "build:esm": "tsc 1>&2 --module ES2020 --outDir lib/esm",
    "copy:assets": "npm run -s copy:public && npm run -s copy:cjs && npm run -s copy:esm",
    "copy:public": "cpx \"./public/**/*\" ./lib/public",
    "copy:cjs": "cpx \"./src/**/*.scss\" ./lib/cjs",
    "copy:esm": "cpx \"./src/**/*.scss\" ./lib/esm",
    "cover": "",
    "lint": "eslint -f visualstudio \"./src/**/*.{ts,tsx}\" 1>&2",
    "lint:fix": "npm run lint -- --fix",
    "pseudolocalize": "betools pseudolocalize --englishDir ./public/locales/en --out ./lib/public/locales/en-PSEUDO",
    "test": "",
    "clean": "rimraf lib .rush/temp/package-deps*.json",
    "rebuild": "npm run clean && npm run build"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "i18next": "^10.2.2",
    "react-spring": "^8.0.27",
    "redux": "^4.0.3"
  },
  "devDependencies": {
    "@itwin/appui-abstract": "rc",
    "@itwin/appui-layout-react": "rc",
    "@itwin/appui-react": "rc",
    "@itwin/build-tools": "rc",
    "@itwin/components-react": "rc",
    "@itwin/core-bentley": "rc",
    "@itwin/core-common": "rc",
    "@itwin/core-frontend": "rc",
    "@itwin/core-geometry": "rc",
    "@itwin/core-i18n": "rc",
    "@itwin/core-markup": "rc",
    "@itwin/core-orbitgt": "rc",
    "@itwin/core-quantity": "rc",
    "@itwin/core-react": "rc",
    "@itwin/eslint-plugin": "rc",
    "@itwin/presentation-common": "rc",
    "@itwin/presentation-components": "rc",
    "@itwin/presentation-frontend": "rc",
    "@itwin/webgl-compatibility": "rc",
    "@types/i18next": "^8.4.2",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "cpx": "^1.5.0",
    "eslint": "^7.11.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.3.0"
  },
  "peerDependencies": {
    "@itwin/appui-abstract": "rc",
    "@itwin/appui-layout-react": "rc",
    "@itwin/appui-react": "rc",
    "@itwin/components-react": "rc",
    "@itwin/core-bentley": "rc",
    "@itwin/core-common": "rc",
    "@itwin/core-frontend": "rc",
    "@itwin/core-geometry": "rc",
    "@itwin/core-i18n": "rc",
    "@itwin/core-markup": "rc",
    "@itwin/core-orbitgt": "rc",
    "@itwin/core-quantity": "rc",
    "@itwin/core-react": "rc",
    "@itwin/presentation-common": "rc",
    "@itwin/presentation-components": "rc",
    "@itwin/presentation-frontend": "rc",
    "@itwin/webgl-compatibility": "rc",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.0"
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/ui",
    "rules": {
      "@typescript-eslint/no-shadow": "off",
      "no-duplicate-imports": "off",
      "@typescript-eslint/consistent-type-imports": "error"
    }
  }
}
