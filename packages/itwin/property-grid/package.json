{
  "name": "@itwin/property-grid-react",
  "version": "1.0.0-dev.4",
  "description": "This package offers a React widget which provides access to the property grid within an iModel. Designed for use in an iTwin AppUI application",
  "keywords": [
    "Bentley",
    "Property Grid React",
    "iModel Property Grid",
    "iTwin.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/viewer-components-react.git",
    "directory": "packages/itwin/property-grid"
  },
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/cjs/property-grid-react.js",
  "module": "lib/esm/property-grid-react.js",
  "typings": "lib/cjs/property-grid-react",
  "scripts": {
    "build": "npm run -s dual-build && npm run -s copy:assets",
    "dual-build": "npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs",
    "build:esm": "tsc 1>&2 --module ES2020 --outDir lib/esm",
    "copy:assets": "npm run -s copy:public && npm run -s copy:cjs && npm run -s copy:esm",
    "copy:public": "cpx \"./public/**/*\" ./lib/public",
    "copy:cjs": "cpx \"./src/**/*.scss\" ./lib/cjs",
    "copy:esm": "cpx \"./src/**/*.scss\" ./lib/esm",
    "cover": "nyc npm run test",
    "extract-api": "betools extract-api --entry=property-grid-react",
    "lint": "eslint -f visualstudio \"./src/**/*.{ts,tsx}\" 1>&2",
    "lint:fix": "npm run lint -- --fix",
    "pseudolocalize": "betools pseudolocalize --englishDir ./public/locales/en --out ./lib/public/locales/en-PSEUDO",
    "test": "mocha \"./lib/cjs/test/**/*.test.js\"",
    "clean": "rimraf lib .rush/temp/package-deps*.json",
    "rebuild": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "@itwin/appui-abstract": "^4.0.0",
    "@itwin/appui-react": "^4.3.0",
    "@itwin/components-react": "^4.3.0",
    "@itwin/core-bentley": "^4.0.0",
    "@itwin/core-frontend": "^4.0.0",
    "@itwin/core-react": "^4.3.0",
    "@itwin/presentation-components": "^4.0.0",
    "@itwin/presentation-frontend": "^4.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-redux": "^7.2.0"
  },
  "dependencies": {
    "@itwin/itwinui-icons-react": "^2.1.0",
    "@itwin/itwinui-illustrations-react": "^2.1.0",
    "@itwin/itwinui-react": "^2.11.0",
    "classnames": "^2.3.1",
    "react-error-boundary": "^4.0.10"
  },
  "devDependencies": {
    "@itwin/appui-abstract": "^4.0.0",
    "@itwin/appui-layout-react": "^4.3.0",
    "@itwin/appui-react": "^4.3.0",
    "@itwin/build-tools": "^4.0.0",
    "@itwin/components-react": "^4.3.0",
    "@itwin/core-bentley": "^4.0.0",
    "@itwin/core-common": "^4.0.0",
    "@itwin/core-frontend": "^4.0.0",
    "@itwin/core-geometry": "^4.0.0",
    "@itwin/core-i18n": "^4.0.0",
    "@itwin/core-markup": "^4.0.0",
    "@itwin/core-orbitgt": "^4.0.0",
    "@itwin/core-quantity": "^4.0.0",
    "@itwin/core-react": "^4.3.0",
    "@itwin/core-telemetry": "^4.0.0",
    "@itwin/ecschema-metadata": "^4.0.0",
    "@itwin/eslint-plugin": "^4.0.0-dev.38",
    "@itwin/imodel-components-react": "^4.3.0",
    "@itwin/presentation-common": "^4.0.0",
    "@itwin/presentation-components": "^4.0.0",
    "@itwin/presentation-frontend": "^4.0.0",
    "@itwin/webgl-compatibility": "^4.0.0",
    "@rushstack/eslint-patch": "1.2.0",
    "@testing-library/dom": "^8.12.0",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "14.4.3",
    "@types/chai": "4.3.5",
    "@types/jsdom-global": "^3.0.4",
    "@types/mocha": "^10.0.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/sinon": "^10.0.15",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "chai": "^4.3.7",
    "cpx2": "^3.0.0",
    "eslint": "^8.41.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-react": "^7.32.2",
    "jsdom": "^22.1.0",
    "jsdom-global": "3.0.2",
    "mocha": "^10.2.0",
    "nyc": "15.1.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-redux": "^7.2.2",
    "redux": "^4.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^15.1.0",
    "sinon-chai": "^3.7.0",
    "typescript": "~5.0.0"
  },
  "eslintConfig": {
    "extends": [
      ".eslintrc.js"
    ]
  }
}
