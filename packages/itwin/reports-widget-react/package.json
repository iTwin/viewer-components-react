{
  "name": "@itwin/reports-widget-react",
  "version": "0.0.0",
  "description": "An iTwin.js 3D Viewer Widget that interfaces with the iTwin Reporting Platform.",
  "keywords": [
    "Bentley",
    "BIM",
    "iModel",
    "Reporting",
    "Reports"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/imodeljs/viewer-components-react/tree/master/packages/itwin/reports-widget-react"
  },
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/cjs/reports-widget-react.js",
  "module": "lib/esm/reports-widget-react.js",
  "typings": "lib/cjs/reports-widget-react",
  "scripts": {
    "build": "npm run -s dual-build && npm run -s copy:assets",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs",
    "build:esm": "tsc 1>&2 --module ES2020 --outDir lib/esm",
    "clean": "rimraf lib",
    "copy:assets": "npm run -s copy:public && npm run -s copy:cjs && npm run -s copy:esm",
    "copy:cjs": "cpx \"./src/**/*.scss\" ./lib/cjs",
    "copy:esm": "cpx \"./src/**/*.scss\" ./lib/esm",
    "copy:public": "cpx \"./public/**/*\" ./lib/public",
    "cover": "",
    "dual-build": "npm run -s build:cjs && npm run -s build:esm",
    "lint": "eslint -f visualstudio \"./src/**/*.{ts,tsx}\" 1>&2",
    "lint:fix": "npm run lint -- --fix",
    "pseudolocalize": "betools pseudolocalize --englishDir ./public/locales/en --out ./public/locales/en-PSEUDO",
    "rebuild": "npm run clean && npm run build",
    "test": ""
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/ui",
    "rules": {
      "no-duplicate-imports": "off",
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/no-shadow": "off",
      "deprecation/deprecation": "off",
      "jsx-a11y/click-events-have-key-events": "off",
      "jsx-a11y/interactive-supports-focus": "off",
      "jsx-a11y/no-static-element-interactions": "off"
    }
  },
  "dependencies": {
    "@itwin/itwinui-icons-react": "^1.7.0",
    "@itwin/itwinui-icons-color-react": "^1.0.1",
    "@itwin/itwinui-react": "^1.33.0",
    "simple-react-validator": "^1.6.1"
  },
  "//devDependencies": [
    "REMOVE CROSS-FETCH and CORE-BENTLEY WHEN DONE WITH REPORTING CLIENT"
  ],
  "devDependencies": {
    "@itwin/appui-abstract": "^3.1.0",
    "@itwin/appui-react": "^3.1.0",
    "@itwin/build-tools": "^3.1.0",
    "@itwin/core-common": "^3.1.0",
    "@itwin/core-frontend": "^3.1.0",
    "@itwin/eslint-plugin": "^3.1.0",
    "@itwin/imodels-access-frontend": "^1.0.1",
    "@itwin/imodels-client-management": "^1.0.1",
    "@itwin/itwinui-css": "^0.50.0",
    "@itwin/webgl-compatibility": "^3.1.0",
    "@types/i18next": "^8.4.2",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-table": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.10.1",
    "cpx2": "^3.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-table": "^7.7.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.3.0",
    "cross-fetch": "^3.1.4",
    "@itwin/core-bentley": "^3.1.0"
  },
  "peerDependencies": {
    "@itwin/appui-abstract": "^3.1.0",
    "@itwin/appui-react": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.0"
  }
}
