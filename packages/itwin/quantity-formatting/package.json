{
  "name": "@itwin/quantity-formatting-react",
  "version": "0.1.0",
  "license": "MIT",
  "description": "React components and utilities for quantity formatting",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/viewer-components-react/tree/master/packages/itwin/quantity-formatting"
  },
  "type": "module",
  "types": "./lib/quantity-formatting-react.d.ts",
  "exports": {
    ".": {
      "types": "./lib/quantity-formatting-react.d.ts",
      "default": "./lib/quantity-formatting-react.js"
    }
  },
  "scripts": {
    "build": "npm run copy:public && tsc 1>&2 && npm run copy:css",
    "copy:public": "cpx \"./public/**/*\" ./lib/public",
    "copy:css": "cpx \"./src/**/*.*css\" ./lib",
    "pseudolocalize": "betools pseudolocalize --englishDir ./public/locales/en --out ./lib/public/locales/en-PSEUDO",
    "clean": "rimraf lib",
    "rebuild": "npm run clean && npm run build",
    "extract-api": "betools extract-api --entry=lib/quantity-formatting-react --apiReportFolder=./api --apiReportTempFolder=./api/temp --apiSummaryFolder=./api --includeUnexportedApis",
    "lint": "eslint -f visualstudio \"./src/**/*.{ts,tsx}\" 1>&2",
    "lint:fix": "npm run lint -- --fix",
    "lint:table": "eslint ./**/*.{ts,tsx} 1>&2 -f ./node_modules/@itwin/eslint-plugin/dist/formatters/no-internal-summary-with-table.js",
    "test": "vitest",
    "cover": "vitest run --coverage --silent",
    "update-extractions": "node ../../../scripts/updateExtractions.js --targets=./README.md",
    "check-extractions": "node ../../../scripts/updateExtractions.js --targets=./README.md --check"
  },
  "keywords": [
    "Bentley",
    "BIM",
    "iModel",
    "iTwin",
    "Quantity",
    "Formatting",
    "Units",
    "iTwin.js"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "peerDependencies": {
    "@itwin/core-frontend": "^5.1.1",
    "@itwin/core-quantity": "^5.1.1",
    "@itwin/itwinui-react": "^3.16.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@itwin/appui-abstract": "^5.1.1",
    "@itwin/build-tools": "^5.1.1",
    "@itwin/core-bentley": "^5.1.1",
    "@itwin/core-common": "^5.1.1",
    "@itwin/core-frontend": "^5.1.1",
    "@itwin/core-geometry": "^5.1.1",
    "@itwin/core-orbitgt": "^5.1.1",
    "@itwin/core-quantity": "^5.1.1",
    "@itwin/ecschema-metadata": "^5.1.1",
    "@itwin/ecschema-rpcinterface-common": "^5.1.1",
    "@itwin/eslint-plugin": "^5.2.1",
    "@itwin/itwinui-react": "^3.19.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "jsdom": "^26.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.0",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@itwin/itwinui-icons-react": "^2.10.0"
  }
}
