{
  "plugins": [
    "@itwin"
  ],
  "extends": [
    "plugin:@itwin/ui"
  ],
  "rules": {
    "@typescript-eslint/object-curly-spacing": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "@itwin/no-internal": [
      "off",
      {
        "tag": [
          "internal"
        ]
      }
    ],
    "@typescript-eslint/no-floating-promises": [
      2,
      {
        // typescript-eslint reports async IIFE as a floating promise, so we should enable this option
        "ignoreIIFE": true
      }
    ]
  }
}
