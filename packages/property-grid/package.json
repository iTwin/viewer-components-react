{
  "name": "@bentley/property-grid-react",
  "version": "1.0.2",
  "description": "This package offers a React widget which provides access to the property grid within an iModel. Designed for use in an iModeljs 9-zone application",
  "license": "MIT",
  "main": "lib/property-grid-react.js",
  "typings": "lib/property-grid-react",
  "scripts": {
    "copy:assets": "cpx \"./src/**/*.scss\" ./lib && cpx \"./public/**/*\" ./lib/public",
    "pseudolocalize": "betools pseudolocalize --englishDir ./public/locales/en --out ./lib/public/locales/en-PSEUDO",
    "build": " tsc 1>&2 && npm run copy:assets && npm run pseudolocalize && npm run build:extension",
    "build:extension": "extension-webpack-tools build -s ./src/property-grid-react.ts -o ./lib/extension --sourceMap && npm run copy:assets:extension",
    "copy:assets:extension": "cpx \"./src/**/*.scss\" ./lib/extension && cpx \"./public/locales/**/*\" ./lib/extension/locales",
    "clean": "rimraf lib",
    "lint": "tslint -p . 1>&2",
    "test": "",
    "cover": ""
  },
  "keywords": [
    "Bentley",
    "Property Grid React",
    "iModel Property Grid",
    "iModel.js"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
