{
  "extends": "@bentley/build-tools/tslint.json",
  "linterOptions": {
    "exclude": [
      "bin"
    ]
  },
  "rules": {
    "ordered-imports": false,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}