{
  "name": "@itwin/imodel-react-hooks",
  "version": "0.2.0",
  "description": "Reusable React Hooks to help with iTwin.js",
  "keywords": [
    "Bentley",
    "hooks",
    "react",
    "iModel",
    "iTwin.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/imodeljs/viewer-components-react/tree/master/packages/itwin/imodel-react-hooks"
  },
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/cjs/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs",
    "build:esm": "tsc 1>&2 --module ES2020 --outDir lib/esm",
    "clean": "rimraf lib",
    "rebuild": "npm run clean && npm run build",
    "cover": "npm test -- --coverage",
    "lint": "",
    "lint:fix": "eslint -f visualstudio \"./src/**/*.{ts,tsx}\" 1>&2 --fix",
    "audit": "pnpm audit --audit-level=high",
    "start": "",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "collectCoverageFrom": [
      "<rootDir>/src/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "test",
      ".d.ts"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "verbose": true
  },
  "devDependencies": {
    "@itwin/appui-abstract": "^4.10.10",
    "@itwin/build-tools": "^4.10.10",
    "@itwin/core-bentley": "^4.10.10",
    "@itwin/core-common": "^4.10.10",
    "@itwin/core-frontend": "^4.10.10",
    "@itwin/core-geometry": "^4.10.10",
    "@itwin/core-orbitgt": "^4.10.10",
    "@itwin/core-quantity": "^4.10.10",
    "@itwin/eslint-plugin": "^4.1.1",
    "@itwin/webgl-compatibility": "^4.10.10",
    "@testing-library/react": "^9.5.0",
    "@types/jest": "^27.5.2",
    "@types/react": "^17.0.83",
    "@types/react-dom": "^17.0.26",
    "@types/testing-library__react": "^9.1.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "babel-jest": "^27.5.1",
    "eslint": "^7.32.0",
    "jest": "^27.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.5",
    "typescript": "~4.6.4"
  },
  "peerDependencies": {
    "@itwin/core-frontend": "^3 || ^4",
    "@itwin/core-geometry": "^3 || ^4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/ui",
    "rules": {
      "no-duplicate-imports": "off",
      "@typescript-eslint/consistent-type-imports": "error"
    }
  }
}
