{
  "name": "@bentley/measure-tools-react",
  "version": "0.6.0",
  "license": "MIT",
  "description": "Frontend framework and tools for measurements",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/viewer-components-react/tree/master/packages/measure-tools"
  },
  "main": "lib/cjs/measure-tools-react.js",
  "module": "lib/esm/measure-tools-react.js",
  "typings": "lib/cjs/measure-tools-react",
  "scripts": {
    "build": "npm run copy:public && npm run -s build:cjs && npm run -s build:esm && npm run webpack:tests",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs && npm run -s copy:cjs",
    "build:esm": "tsc 1>&2 --outDir lib/esm --module ES2020 && npm run -s copy:esm",
    "copy:public": "cpx \"./public/**/*\" ./lib/public",
    "copy:cjs": "cpx \"./src/**/*.*css\" ./lib/cjs",
    "copy:esm": "cpx \"./src/**/*.*css\" ./lib/esm",
    "pseudolocalize": "betools pseudolocalize --englishDir ./public/locales/en --out ./lib/public/locales/en-PSEUDO",
    "watch": "tsc --w",
    "clean": "rimraf lib .rush/temp/package-deps*.json",
    "rebuild": "npm run clean && npm run build",
    "lint": "eslint -f visualstudio \"./src/**/*.{ts,tsx}\" 1>&2",
    "test": "certa -c certa.json -r chrome",
    "cover": "nyc npm test",
    "madge": "madge --circular --extensions ts,tsx src",
    "webpack:tests": "webpack --config webpack.config.js 1>&2"
  },
  "keywords": [
    "Bentley",
    "BIM",
    "iModel",
    "iTwin",
    "Measurement",
    "Measure",
    "iTwin.js"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "files": [
    "lib/**/*",
    "!lib/**/test/**/*"
  ],
  "peerDependencies": {
    "@bentley/telemetry-client": "rc",
    "@itwin/appui-abstract": "rc",
    "@itwin/appui-layout-react": "rc",
    "@itwin/appui-react": "rc",
    "@itwin/components-react": "rc",
    "@itwin/core-bentley": "rc",
    "@itwin/core-common": "rc",
    "@itwin/core-frontend": "rc",
    "@itwin/core-geometry": "rc",
    "@itwin/core-quantity": "rc",
    "@itwin/core-react": "rc",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@bentley/itwin-client": "rc",
    "@bentley/product-settings-client": "rc",
    "@bentley/telemetry-client": "rc",
    "@itwin/appui-abstract": "rc",
    "@itwin/appui-layout-react": "rc",
    "@itwin/appui-react": "rc",
    "@itwin/build-tools": "rc",
    "@itwin/certa": "rc",
    "@itwin/components-react": "rc",
    "@itwin/core-bentley": "rc",
    "@itwin/core-common": "rc",
    "@itwin/core-frontend": "rc",
    "@itwin/core-geometry": "rc",
    "@itwin/core-i18n": "rc",
    "@itwin/core-markup": "rc",
    "@itwin/core-orbitgt": "rc",
    "@itwin/core-quantity": "rc",
    "@itwin/core-react": "rc",
    "@itwin/eslint-plugin": "rc",
    "@itwin/imodel-components-react": "rc",
    "@itwin/presentation-common": "rc",
    "@itwin/presentation-frontend": "rc",
    "@itwin/webgl-compatibility": "rc",
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^7.1.1",
    "@types/mocha": "^8.2.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cpx2": "^3.0.0",
    "eslint": "^7.11.0",
    "glob": "^7.1.2",
    "madge": "4.0.2",
    "mocha": "^8.3.2",
    "null-loader": "3.0.0",
    "nyc": "^15.1.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-redux": "^7.2.2",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.0.0",
    "typescript": "^4.4.0",
    "url-loader": "2.1.0",
    "webpack": "4.44.2",
    "webpack-cli": "^3.3.8"
  },
  "dependencies": {
    "@bentley/icons-generic-webfont": "^1.0.29"
  },
  "nyc": {
    "nycrc-path": "./node_modules/@itwin/build-tools/.nycrc",
    "check-coverage": true,
    "statements": 20,
    "branches": 20,
    "functions": 20,
    "lines": 20
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/itwinjs-recommended",
    "rules": {
      "@typescript-eslint/unbound-method": "off"
    }
  }
}