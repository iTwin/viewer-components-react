{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "downlevelIteration": true,
    "target": "es5",
    "types": [
      "@bentley/webpack-tools"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}