{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "build": "lage build --grouped",
    "cover": "lage cover --grouped",
    "test": "lage test --grouped",
    "lint": "lage lint --grouped",
    "change": "beachball change --no-commit",
    "change:dev": "beachball change --config beachball.config.dev.js --no-commit",
    "hello": "pnpm --filter sample-a start",
    "publish": "beachball publish --new",
    "prettier": "prettier . --write"
  },
  "devDependencies": {
    "lage": "^2.7.8",
    "beachball": "^2.35.0",
    "prettier": "^3.0.0"
  }
}
