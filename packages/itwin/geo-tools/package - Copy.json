{
  "name": "@bentley/geo-tools-react",
  "version": "0.1.7",
  "description": "React Geospatial Tools",
  "keywords": [
    "Bentley",
    "iModel.js",
    "Geo",
    "Bing",
    "Map",
    "Search",
    "Address"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/imodeljs/viewer-components-react/tree/master/packages/bentley/geo-tools"
  },
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/geo-tools.js",
  "typings": "lib/geo-tools",
  "scripts": {
    "build": " tsc 1>&2 && npm run copy:assets",
    "build-prod": " tsc -p tsconfig.json 1>&2 && npm run copy:assets",
    "clean": "rimraf lib .rush/temp/package-deps*.json",
    "rebuild": "npm run clean && npm run build",
    "copy:assets": "cpx \"./src/**/*.{*css,json,svg}\" \"./lib\" && cpx \"./public/**/*\" \"./lib/public\"",
    "cover": "nyc npm test",
    "lint": "",
    "lint:real": "eslint ./src/**/*.{ts,tsx} 1>&2",
    "pseudolocalize": "betools pseudolocalize --englishDir ./public/locales/en --out ./lib/public/locales/en-PSEUDO",
    "test": "mocha --opts ./mocha.opts \"./lib/test/**/*.test.js\""
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "i18next": "^10.2.2",
    "react-autosuggest": "^10.0.2",
    "svg-sprite-loader": "4.2.1"
  },
  "devDependencies": {
    "@itwin/appui-abstract": "^3.0.0",
    "@itwin/appui-react": "^3.0.0",
    "@itwin/build-tools": "^3.0.0",
    "@itwin/components-react": "^3.0.0",
    "@itwin/core-bentley": "^3.0.0",
    "@itwin/core-common": "^3.0.0",
    "@itwin/core-frontend": "^3.0.0",
    "@itwin/core-geometry": "^3.0.0",
    "@itwin/core-i18n": "^3.0.0",
    "@itwin/core-react": "^3.0.0",
    "@itwin/eslint-plugin": "^3.0.0",
    "@testing-library/react": "^8.0.1",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/chai": "^4.1.4",
    "@types/enzyme": "3.9.3",
    "@types/i18next": "^8.4.2",
    "@types/mocha": "^5.2.5",
    "@types/node": "10.14.1",
    "@types/react": "~16.9.43",
    "@types/react-autosuggest": "^10.0.0",
    "@types/react-dom": "^16.8.0",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7",
    "chai-jest-snapshot": "^2.0.0",
    "chai-spies": "1.0.0",
    "cpx2": "^3.0.0",
    "enzyme": "^3.4.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^7.11.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^11.12.0",
    "jsdom-global": "3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^14.0.0",
    "raf": "^3.4.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.2.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^7.0.1",
    "ts-sinon": "^2.0.1",
    "typescript": "~4.3.0",
    "xmlhttprequest": "^1.8.0"
  },
  "peerDependencies": {
    "@itwin/core-bentley": "^3.0.0",
    "@itwin/core-geometry": "^3.0.0",
    "@itwin/core-common": "^3.0.0",
    "@itwin/core-frontend": "^3.0.0",
    "@itwin/core-i18n": "^3.0.0",
    "@itwin/eslint-plugin": "^3.0.0",
    "@bentley/itwin-client": "^2.9.1",
    "@bentley/rbac-client": "^2.9.1",
    "@itwin/appui-abstract": "^3.0.0",
    "@itwin/components-react": "^3.0.0",
    "@itwin/core-react": "^3.0.0",
    "@itwin/appui-react": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "cpx2": "^3.0.0",
    "eslint": "^7.11.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "nyc": {
    "extends": "./node_modules/@itwin/build-tools/.nycrc",
    "require": [
      "ignore-styles",
      "jsdom-global/register",
      "source-map-support/register",
      "ts-node/register"
    ],
    "check-coverage": true,
    "statements": 60,
    "branches": 25,
    "functions": 60,
    "lines": 60
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/ui",
    "rules": {
      "@typescript-eslint/no-shadow": "off",
      "no-duplicate-imports": "off",
      "@typescript-eslint/consistent-type-imports": "error"
    }
  }
}
