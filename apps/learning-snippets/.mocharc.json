{
  "require": [
    "raf/polyfill",
    "source-map-support/register",
    "ignore-styles"
  ],
  "check-leaks": true,
  "timeout": "60000",
  "globals": [
    "IS_REACT_ACT_ENVIRONMENT"
  ],
  "file": [
    "./lib/test/setup.js"
  ],
  "ignore": [
    "lib/coverage/**/*"
  ],
  "reporter": "node_modules/@itwin/build-tools/mocha-reporter",
  "reporter-option": [
    "mochaFile=lib/test/junit_results.xml"
  ],
  "spec": [
    "./lib/test/**/*.test.js"
  ]
}
